{
  "name": "ghx-tool",
  "version": "2.1.1",
  "description": "GitHub Account Manager CLI",
  "publishConfig": {
    "access": "public"
  },
  "main": "bin/ghx.js",
  "bin": {
    "ghx": "bin/ghx.js"
  },
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "lint": "eslint src/**",
    "lint:fix": "eslint src/** --fix",
    "format": "prettier --write src/**",
    "build": "pkg . --out-path dist --targets node18-win-x64,node18-linux-x64,node18-macos-x64",
    "build:binaries": "node scripts/build-binaries.js",
    "check:version": "node scripts/check-version.js",
    "release": "release-it"
  },
  "pkg": {
    "scripts": "src/**/*.js",
    "assets": [
      "package.json"
    ],
    "outputPath": "dist"
  },
  "keywords": [
    "github",
    "cli",
    "multi-account",
    "ssh"
  ],
  "author": "Purshottam Jain",
  "license": "Proprietary",
  "dependencies": {
    "chalk": "^4.1.2",
    "clipboardy": "^5.0.2",
    "commander": "^11.0.0",
    "console-table-printer": "^2.15.0",
    "fs-extra": "^11.1.0",
    "inquirer": "^8.2.5",
    "ora": "^5.4.1",
    "simple-git": "^3.19.0"
  },
  "type": "commonjs",
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@release-it/conventional-changelog": "^10.0.4",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "pkg": "^5.8.1",
    "prettier": "^3.7.4",
    "release-it": "^19.2.2"
  }
}
